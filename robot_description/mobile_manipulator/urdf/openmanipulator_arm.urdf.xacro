<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- OpenManipulator-X arm macro
       Based on ROBOTIS OpenManipulator-X specifications
       4 DOF arm with gripper capability
       Open source hardware/software: https://github.com/ROBOTIS-GIT/open_manipulator
  -->
  
  <xacro:macro name="openmanipulator_arm" params="parent *origin">

    <!-- Link 1 (Base) -->
    <link name="link1">
      <visual>
        <origin xyz="0 0 0.06" rpy="0 0 0"/>
        <geometry>
          <box size="0.05 0.05 0.12"/>
        </geometry>
        <material name="om_grey">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.06" rpy="0 0 0"/>
        <geometry>
          <box size="0.05 0.05 0.12"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.082"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
    </link>

    <joint name="joint1" type="revolute">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="link1"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-pi}" upper="${pi}" effort="1.0" velocity="4.8"/>
      <dynamics damping="0.1" friction="0.1"/>
    </joint>

    <!-- Link 2 (Shoulder) -->
    <link name="link2">
      <visual>
        <origin xyz="0 0 0.065" rpy="0 0 0"/>
        <geometry>
          <box size="0.03 0.03 0.13"/>
        </geometry>
        <material name="om_grey"/>
      </visual>
      <collision>
        <origin xyz="0 0 0.065" rpy="0 0 0"/>
        <geometry>
          <box size="0.03 0.03 0.13"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.098"/>
        <origin xyz="0 0 0.065" rpy="0 0 0"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>

    <joint name="joint2" type="revolute">
      <parent link="link1"/>
      <child link="link2"/>
      <origin xyz="0.012 0 0.077" rpy="0 ${pi/2} 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-pi/2}" upper="${pi/2}" effort="1.0" velocity="4.8"/>
      <dynamics damping="0.1" friction="0.1"/>
    </joint>

    <!-- Link 3 (Elbow) -->
    <link name="link3">
      <visual>
        <origin xyz="0 0 0.065" rpy="0 0 0"/>
        <geometry>
          <box size="0.025 0.025 0.13"/>
        </geometry>
        <material name="om_grey"/>
      </visual>
      <collision>
        <origin xyz="0 0 0.065" rpy="0 0 0"/>
        <geometry>
          <box size="0.025 0.025 0.13"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.136"/>
        <origin xyz="0 0 0.065" rpy="0 0 0"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>

    <joint name="joint3" type="revolute">
      <parent link="link2"/>
      <child link="link3"/>
      <origin xyz="0 0 0.13" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-pi/2}" upper="${pi/2 + 0.3}" effort="1.0" velocity="4.8"/>
      <dynamics damping="0.1" friction="0.1"/>
    </joint>

    <!-- Link 4 (Wrist) -->
    <link name="link4">
      <visual>
        <origin xyz="0 0 0.063" rpy="0 0 0"/>
        <geometry>
          <box size="0.025 0.025 0.126"/>
        </geometry>
        <material name="om_grey"/>
      </visual>
      <collision>
        <origin xyz="0 0 0.063" rpy="0 0 0"/>
        <geometry>
          <box size="0.025 0.025 0.126"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.143"/>
        <origin xyz="0 0 0.063" rpy="0 0 0"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>

    <joint name="joint4" type="revolute">
      <parent link="link3"/>
      <child link="link4"/>
      <origin xyz="0 0 0.124" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-pi/2 - 0.3}" upper="${pi/2 + 0.3}" effort="1.0" velocity="4.8"/>
      <dynamics damping="0.1" friction="0.1"/>
    </joint>

    <!-- Gripper Base -->
    <link name="gripper_link">
      <visual>
        <origin xyz="0 0 0.02" rpy="0 0 0"/>
        <geometry>
          <box size="0.03 0.04 0.04"/>
        </geometry>
        <material name="om_dark">
          <color rgba="0.3 0.3 0.3 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.02" rpy="0 0 0"/>
        <geometry>
          <box size="0.03 0.04 0.04"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.07"/>
        <origin xyz="0 0 0.02" rpy="0 0 0"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>

    <joint name="gripper_joint" type="fixed">
      <parent link="link4"/>
      <child link="gripper_link"/>
      <origin xyz="0 0 0.126" rpy="0 0 0"/>
    </joint>

    <!-- Gripper Left Finger -->
    <link name="gripper_left_link">
      <visual>
        <origin xyz="0.02 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.04 0.005 0.06"/>
        </geometry>
        <material name="om_dark"/>
      </visual>
      <collision>
        <origin xyz="0.02 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.04 0.005 0.06"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.015"/>
        <origin xyz="0.02 0 0" rpy="0 0 0"/>
        <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
      </inertial>
    </link>

    <joint name="gripper_left_joint" type="prismatic">
      <parent link="gripper_link"/>
      <child link="gripper_left_link"/>
      <origin xyz="0 0.015 0.04" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-0.01" upper="0.019" effort="1.0" velocity="0.1"/>
      <dynamics damping="0.1" friction="0.1"/>
    </joint>

    <!-- Gripper Right Finger -->
    <link name="gripper_right_link">
      <visual>
        <origin xyz="0.02 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.04 0.005 0.06"/>
        </geometry>
        <material name="om_dark"/>
      </visual>
      <collision>
        <origin xyz="0.02 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.04 0.005 0.06"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.015"/>
        <origin xyz="0.02 0 0" rpy="0 0 0"/>
        <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
      </inertial>
    </link>

    <joint name="gripper_right_joint" type="prismatic">
      <parent link="gripper_link"/>
      <child link="gripper_right_link"/>
      <origin xyz="0 -0.015 0.04" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-0.019" upper="0.01" effort="1.0" velocity="0.1"/>
      <dynamics damping="0.1" friction="0.1"/>
    </joint>

    <!-- Tool Center Point (TCP) -->
    <link name="end_effector_link"/>
    
    <joint name="end_effector_joint" type="fixed">
      <parent link="gripper_link"/>
      <child link="end_effector_link"/>
      <origin xyz="0.04 0 0.04" rpy="0 0 0"/>
    </joint>

  </xacro:macro>

</robot>
